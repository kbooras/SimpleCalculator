<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sign"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:textSize="60sp"/>

    <TextView
        android:id="@+id/calcView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/sign"
        android:gravity="right|center_vertical"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/calcView"
        android:onClick="calcOnClick"/>
    <Button
        android:id="@+id/switchSign"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/calcView"
        android:layout_toRightOf="@+id/clear"
        android:onClick="calcOnClick"/>
    <Button
        android:id="@+id/percent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/calcView"
        android:layout_toRightOf="@id/switchSign"
        android:onClick="operatorOnClick"/>
    <Button
        android:id="@+id/divide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/calcView"
        android:layout_toRightOf="@id/percent"
        android:onClick="operatorOnClick"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/clear"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/clear"
        android:layout_toRightOf="@+id/seven"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/clear"
        android:layout_toRightOf="@id/eight"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="x"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/clear"
        android:layout_toRightOf="@id/nine"
        android:onClick="operatorOnClick"/>


    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/seven"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@+id/four"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@id/five"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/subtract"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@id/six"
        android:onClick="operatorOnClick"/>


    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/four"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/one"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@id/two"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@id/three"
        android:onClick="operatorOnClick"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="0"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/one"
        android:onClick="numOnClick"/>
    <Button
        android:id="@+id/decimal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@id/zero"
        android:onClick="calcOnClick"/>
    <Button
        android:id="@+id/equals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@id/decimal"
        android:onClick="operatorOnClick"/>

</RelativeLayout>
